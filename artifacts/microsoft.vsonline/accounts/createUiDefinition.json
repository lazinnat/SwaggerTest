{
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.0.1-preview",
  "parameters": {      
    "resourceTypes": [
        "Microsoft.VSOnline/Accounts"
    ],
    "basics": [
        {
            "name": "name",
            "type": "Microsoft.Common.TextBox",
            "label": "Account name",
            "defaultValue": "",
            "constraints": {
                "required": true
            }
        }
    ],
    "steps": [
        {
            "name": "tags",
            "label": "Tags",
            "elements": [
                {
                    "name": "tagsControl",
                    "type": "Microsoft.Common.TagsByResource",
                    "resources": [ "Microsoft.VSOnline/Accounts" ]
                }
            ]
        }   
    ],
    "outputs": {	
        "location": "[location()]",
        "accountName": "[basics('name')]",
        "tagsByResource": "[steps('tags').tagsControl]"
    }
  }
}
